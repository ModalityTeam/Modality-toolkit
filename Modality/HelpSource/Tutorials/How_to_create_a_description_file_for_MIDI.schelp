(
~descInput = (
	idInfo: ~idInfo, // still around from above
	protocol: \midi,
	elementsDesc: (
		elements: [
			(
				key: 'bt',
				type: 'button',
				midiMsgType: \cc,
				midiChan: 0,
				midiNum: 8, // control number
				spec: \midiBut,
				ioType: \in
			)
		]
	)
)
);

m = MKtl( \testMIDI, ~descInput );
m.rebuild( ~descInput ); // updating it
m.gui;
m.trace;

// make some messages:
